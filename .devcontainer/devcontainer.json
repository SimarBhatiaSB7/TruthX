{
    "name": "TruthX-GPU-Env",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--gpus", "all",
        "--shm-size", "8gb" 
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "cd transformers && pip install -e . && cd ../FastChat && pip install -e ."
}